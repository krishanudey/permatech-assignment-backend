{
    "defaultSeverity": "error",
    "extends": ["tslint:recommended"],
    "linterOptions": {
        "exclude": [
            "config/**/*.js",
            "node_modules/**/*.ts",
            "coverage/lcov-report/*.js"
        ]
    },
    "rules": {
        "trailing-comma": [false],
        "no-console": false,
        "no-namespace": false,
        "max-classes-per-file": false
    },
    "jsRules": {
        "no-console": false
    },
    "rulesDirectory": []
}
